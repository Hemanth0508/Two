<!DOCTYPE html>
<html>
    <body>
        <p>Upload XML files</p>

        <!-- Allow multiple file selection -->
        <form id="xmlForm" action="/enter" method="post" enctype="multipart/form-data">
            <input type="file" id="xmlFile" name="xmlFiles" accept=".xml" multiple required>
            <input type="submit" value="Submit XML Files">
        </form>
    </body>

    <script src="index.js" type="text/javascript"></script>
    <script>
        document.getElementById("xmlForm").addEventListener('submit', function(event) {
            event.preventDefault();

            const formData = new FormData();
            const fileInput = document.getElementById('xmlFile');

            if (fileInput.files.length > 0) {
                // Append each file to the FormData
                for (let i = 0; i < fileInput.files.length; i++) {
                    formData.append('xmlFiles', fileInput.files[i]);  // 'xmlFiles' matches the backend
                }

                fetch('/enter', {
                    method: 'POST',
                    body: formData  
                })
                .then(response => response.text()) 
                .then(result => {
                    console.log('Success:', result);
                    alert('XML files submitted successfully');
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Failed to submit XML files');
                });
            }
        });
    </script>
</html>
